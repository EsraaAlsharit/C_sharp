@{
    ViewData["Title"] = "Home Page";
}
@model DashboardOrder
<div>

    @await Html.PartialAsync("_New", @Model.Order)

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in @Model.AllOrders)
                {
                    <tr>
                        <td>@item.Customer.Name</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.CreatedAt.ToString("MMMM d, yyyy")</td>
                    </tr>
                }

            </tbody>
        </table>


    </div>
</div>
